@model Capa_Entidad.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Delete the Category</h2>

<h3>Are you sure you want to delete this?</h3>
<br />
<div>
    <dl class="dl-horizontal">
        <dt>
            <label>Category identifier</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id_Category)
        </dd>
        <dt>
            <label>Name</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            <label>Desciption</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Category", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id_Category)
        <div class="form-actions no-color">
            <div>
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-primary" href="@Url.Action("Index", "Category")"><i class="glyphicon glyphicon-menu-left"></i> Regrese a Listado</a>
            </div>
        </div>
    }
</div>
