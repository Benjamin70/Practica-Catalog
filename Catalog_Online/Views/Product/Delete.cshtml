@model Capa_Entidad.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Delete the product</h2>

<h3>Are you sure you want to delete this?</h3>
<br />
<div>
    <dl class="dl-horizontal">
        <dt>
            <label>Product Identifier</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id_Product)
        </dd>

        <dt>
            <label>Name</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            <label>Price</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            <label>Category Identifier</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryID)
        </dd>

    </dl>

    @using (Html.BeginForm())
     {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id_Product)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a class="btn btn-primary" href="@Url.Action("Index", "Product")"> <i class="glyphicon glyphicon-menu-left"></i> Regresar al Listado</a>
        </div>
     }
</div>
